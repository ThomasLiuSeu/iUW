<Dialog xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns="sap.m"
	id='editChartDialog' title="{i18n>CHART_LEVEL_SETTINGS}"
	contentHeight="30%" contentWidth="25%" horizontalScrolling='false'
	verticalScrolling='true' resourceBundleName="myBundle"
	resourceBundleAlias="i18n">
	<content>
		<f:Form id="FormEditMeasureAdvanced" maxContainerCols="2"
			editable="true" visible="true" class="editMeasureForm">
			<f:layout>
				<f:ResponsiveGridLayout labelSpanL="3"
					labelSpanM="3" columnsL="1" columnsM="1" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<!-- <f:FormElement> <CheckBox id="useAsThreshold" width="100%" text="{i18n>MSG_CHOOSE_THRESHOLD_MEASURE}" 
							visible="false"></CheckBox> </f:FormElement> -->
						<f:FormElement>
							<f:fields>
								<VBox id="Dual_config_1" visible="false">
									<Label text="{i18n>DUAL_AXIS}" design="Bold" class="formLabels" />
									<HBox>
										<Label id="axis_1_label_edit" design="Bold" class="axis_label_edit" />
										<Select id="AxisMsr1_edit" class="dialogComboBoxes"
											items="{DUAL_MODEL>/DATA}" change="setStackMsrs_edit">
											<items>
												<core:ListItem key="{DUAL_MODEL>name}" text="{DUAL_MODEL>name}" />
											</items>
										</Select>
									</HBox>
									<HBox>
										<Label id="axis_2_label_edit" design="Bold" class="axis_label_edit" />
										<Select id="AxisMsr2_edit" class="dialogComboBoxes"
											items="{DUAL_MODEL>/DATA}" change="setStackMsrs_edit">
											<items>
												<core:ListItem key="{DUAL_MODEL>name}" text="{DUAL_MODEL>name}" />
											</items>
										</Select>
									</HBox>
								</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<VBox>
									<CheckBox id="enableStacking" text="{i18n>ENABLE_STACKING}"
										select="onEnableStacking"></CheckBox>
								</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<VBox id="stackingOptions" visible="false">
									<RadioButton groupName="GroupA" id="addMsrToStack"
										text="{i18n>STACK_ALL_MEASURES}" select="onMsrStacking"
										selected="true" />
									<RadioButton groupName="GroupA" id="dimStack"
										text="{i18n>CHOOSE_STACK_DIMENSION}" select="onDimStacking" />
									<Select id="dimsToStack" width="45%" visible="false"
										class="dialogComboBoxes" />
								</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<VBox id="Dual_config_2" visible="false">
									<Button text="{i18n>SELECT_MEASUES_FOR_STACK_1}" icon="sap-icon://slim-arrow-right"
										iconFirst="false" press="openMsrDialogForStack1" />
									<Label id="In_stack1_label_edit" design="Bold" class="formLabels" />
									<Text id="stack1MsrsLabel_edit" />
									<Label text="{i18n>MSG_REMAINING_MEASURES}" design="Bold"
										class="formLabels" />
									<Text id="stack2MsrsLabel_edit" />
								</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<VBox id="MainMeasureSettings" visible="false">
									<Label text="{i18n>MAIN_MEASURE}" 
										required='true'>
									</Label>
									<Select id="choroplethKpiMeasurechartsetting" 
										change="handleMainMeasureChangechartsettings" items="{SB_DDACONFIG>/items}"
										selectedKey="{SB_DDACONFIG>/MAIN_MEASURE}">
										<core:Item key="{path:'SB_DDACONFIG>NAME'}" text="{path:'SB_DDACONFIG>NAME'}" />
									</Select>
								</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<VBox id="ThresholdMeasureSettings" visible="false">
									<items>
										<Label text="{i18n>MSG_ADD_THRESHOLD_MEASURE}" 
											id="messageAddThresholdMeasure" />
										<Label text="{i18n>THRESHOLD_MEASURE}"></Label>
										<Select id="thresholdMeasureChart" items="{SB_DDACONFIG>/items}" selectedKey="{SB_DDACONFIG>/THRESHOLD_MEASURE}">
											<core:Item text="{path:'SB_DDACONFIG>NAME'}" key="{path:'SB_DDACONFIG>NAME'}" />
										</Select>
									</items>
								</VBox>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>

	</content>
	<beginButton>
		<Button text="{i18n>OK}" press="onEditChartDialogOk" />
	</beginButton>
	<endButton>
		<Button text="{i18n>CANCEL}" press="onEditChartDialogCancel" />
	</endButton>
</Dialog>
