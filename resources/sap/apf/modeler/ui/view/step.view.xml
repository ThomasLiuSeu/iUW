<mvc:View controllerName="sap.apf.modeler.ui.controller.step"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:l="sap.ui.layout">
	<VBox xmlns="sap.m" id="idform" visible="true" width="100%"
		displayInline="false" direction="Column" fitContainer="false"
		renderType="Div" justifyContent="Start" alignItems="Stretch">
		<items>
			<ScrollContainer vertical="true">
				<VBox xmlns="sap.m" id="idScrollContent">
					<VBox xmlns="sap.m" id="idStepTitleLayout" visible="true"
						displayInline="false" direction="Column" fitContainer="false"
						renderType="Div" justifyContent="Start" alignItems="Stretch">
						<items>

							<l:Grid id="idStepTitleLabelLayout" hSpacing="1" vSpacing="1">
								<Label xmlns="sap.m" id="idStepTitleLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<Input xmlns="sap.m" id="idstepTitle" editable="true"
									change="handleChangeDetailValueForTree">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</Input>

							</l:Grid>
							<l:Grid id="idstepLongTitleLayout" hSpacing="1" vSpacing="1">

								<Label xmlns="sap.m" id="idStepLongTitleLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<Input xmlns="sap.m" id="idstepLongTitle" editable="true"
									change="handleChangeForLongTitle">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />

									</layoutData>
								</Input>

							</l:Grid>
							<l:Grid id="idCategorySelecLayout" hSpacing="1" vSpacing="1">

								<Label xmlns="sap.m" id="idCategoryTitleLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<MultiComboBox xmlns="sap.m" id="idCategorySelect"
									enabled="true" visible="true" valueState="None" editable="true"
									selectionChange="handleChangeForCategory" items="{/Categories}"
									width="100%">
									<core:Item key="{CategoryId}" text="{CategoryTitle}" />
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</MultiComboBox>
							</l:Grid>

						</items>
					</VBox>

					<Label xmlns="sap.m" id="idDataRequest"></Label>

					<VBox xmlns="sap.m" id="DataRequestLayout" visible="true"
						displayInline="false" direction="Column" fitContainer="false"
						renderType="Div" justifyContent="Start" alignItems="Stretch">
						<items>

							<l:Grid id="idSourceSelectLayout" hSpacing="1" vSpacing="1">
								<Label xmlns="sap.m" id="idSourceSelectLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<Input xmlns="sap.m" id="idSourceSelect" editable="true"
									change="handleChangeForService">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</Input>
							</l:Grid>

							<l:Grid id="idEntitySelectLayout" hSpacing="1" vSpacing="1">
								<Label xmlns="sap.m" id="idEntitySelectLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<Select xmlns="sap.m" id="idEntitySelect" visible="true"
									enabled="true" type="Default" autoAdjustWidth="false"
									change="handleChangeForEntity" items="{/Entities}" width="100%">
									<core:Item key="{entityKey}" text="{entityName}" />
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</Select>
							</l:Grid>

							<l:Grid id="idSelectPropComboLayout" hSpacing="1"
								vSpacing="1">
								<Label xmlns="sap.m" id="idSelectPropComboLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<MultiComboBox xmlns="sap.m" id="idSelectPropCombo"
									enabled="true" visible="true" valueState="None" editable="true"
									selectionFinish="handleChangeForSelectProperty" items="{/Properties}"
									width="100%">
									<core:Item key="{propertyKey}" text="{propertyName}" />
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</MultiComboBox>
							</l:Grid>

							<l:Grid id="idReqFilterSelectLayout" hSpacing="1"
								vSpacing="1">
								<Label xmlns="sap.m" id="idReqFilterSelectLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<Select xmlns="sap.m" id="idReqFilterSelect" name=""
									visible="true" enabled="true" maxWidth="100%" type="Default"
									autoAdjustWidth="false" change="handleChangeForRequiredFilter"
									items="{/Properties}" width="100%">
									<core:Item key="{propertyKey}" text="{propertyName}" />
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</Select>
							</l:Grid>

						</items>
					</VBox>
					<Label xmlns="sap.m" id="idFilterMapping" visible="false"></Label>

					<VBox xmlns="sap.m" id="FilterMapLayout" visible="false"
						displayInline="false" direction="Column" fitContainer="false"
						renderType="Div" justifyContent="Start" alignItems="Stretch">
						<items>

							<l:Grid id="idFilterMapSource" hSpacing="1" vSpacing="1">
								<Label xmlns="sap.m" id="idFilterMapSourceLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<Input xmlns="sap.m" id="idFilterMapSourceSelect"
									editable="true" change="handleChangeForService">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</Input>
							</l:Grid>

							<l:Grid id="idFilterMapEntityLayout" hSpacing="1"
								vSpacing="1">
								<Label xmlns="sap.m" id="idFilterMapEntityLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<Select xmlns="sap.m" id="idFilterMapEntitySelect"
									visible="true" enabled="true" type="Default" autoAdjustWidth="false"
									change="handleChangeForEntity" items="{/Entities}" width="100%">
									<core:Item key="{entityKey}" text="{entityName}" />
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</Select>
							</l:Grid>

							<l:Grid id="idFilterMapTargetRequest" hSpacing="1"
								vSpacing="1">
								<Label xmlns="sap.m" id="idFilterMapTargetFilterLabel"
									width="100%" textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<MultiComboBox xmlns="sap.m"
									id="idFilterMapTargetFilterCombo" enabled="true" visible="true"
									valueState="None" editable="true" selectionFinish="handleChangeForTargetFilter"
									items="{/Properties}" width="100%">
									<core:Item key="{propertyKey}" text="{propertyName}" />
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</MultiComboBox>
							</l:Grid>


							<l:Grid id="idFilterKeepSource" hSpacing="1" vSpacing="1">
								<Label xmlns="sap.m" id="idFilterMapKeepSourceLabel"
									width="100%" textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M4 S4" />
									</layoutData>
								</Label>
								<CheckBox xmlns="sap.m" id="idFilterKeepSourceCheckBox"
									selected="false" visible="true" select="handleFilterMapKeepSource">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L7 M7 S7" />
									</layoutData>
								</CheckBox>
							</l:Grid>
						</items>
					</VBox>
					<Label xmlns="sap.m" id="idCornerTextLabel" />

					<VBox xmlns="sap.m" id="idCornerTextLayout" visible="true"
						displayInline="false" direction="Column" fitContainer="false"
						renderType="Div" justifyContent="Start" alignItems="Stretch">
						<items>

							<l:Grid id="idCornerText" hSpacing="1" vSpacing="1">
								<Input xmlns="sap.m" id="idLeftTop" editable="true"
									change="handleChangeForLeftTop">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L6 M4 S4" />
									</layoutData>
								</Input>
								<Input xmlns="sap.m" id="idRightTop" editable="true"
									change="handleChangeForRightTop">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L6 M4 S4" />
									</layoutData>
								</Input>

							</l:Grid>
							<l:Grid id="idChartIconGrid" hSpacing="1" vSpacing="1">
								<Icon xmlns="sap.ui.core" id="idChartIcon" src="sap-icon://line-chart"
									color="black" visible="true" decorative="true" size="30px">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L12 M8 S3" />
									</layoutData>
								</Icon>
							</l:Grid>
							<l:Grid id="idCornerTextBottom" hSpacing="1" vSpacing="1">
								<Input xmlns="sap.m" id="idLeftBottom" editable="true"
									change="handleChangeForLeftBottom">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L6 M4 S4" />
									</layoutData>
								</Input>
								<Input xmlns="sap.m" id="idRightBottom" editable="true"
									change="handleChangeForRightBottom">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L6 M4 S4" />
									</layoutData>
								</Input>
							</l:Grid>
						</items>
					</VBox>
				</VBox>
			</ScrollContainer>
		</items>
	</VBox>
</mvc:View>