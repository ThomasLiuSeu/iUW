<mvc:View controllerName="sap.apf.modeler.ui.controller.representation"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">


	<VBox xmlns="sap.m" id="idform" visible="true" width="100%"
		displayInline="false" direction="Column" fitContainer="false"
		renderType="Div" justifyContent="Start" alignItems="Stretch">
		<items>
			<ScrollContainer vertical="true">
				<VBox xmlns="sap.m" id="idScrollContent">
					<VBox xmlns="sap.m" id="idChartDataLayout" visible="true"
						displayInline="false" direction="Column" fitContainer="false"
						renderType="Div" justifyContent="Start" alignItems="Stretch">
						<items>

							<l:Grid id="idChartTypeLayout" hSpacing="1" vSpacing="1">
								<Label xmlns="sap.m" id="idChartTypeLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M3 S3" />
									</layoutData>
								</Label>
								<Select xmlns="sap.m" id="idChartType" visible="true"
									enabled="true" width="100%" maxWidth="100%" selectedKey="{/sSelectedChartType}"
									type="Default" autoAdjustWidth="false" change="handleChangeForChartType"
									items="{/aChartTypes}">
									<core:Item key="{sId}" text="{sText}" />
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L4 M4 S4" />
									</layoutData>
								</Select>
							</l:Grid>
						</items>
					</VBox>

					<Label xmlns="sap.m" id="idBasicData"></Label>

					<VBox xmlns="sap.m" id="idBasicDataLayout" visible="true"
						displayInline="false" direction="Column" fitContainer="false"
						renderType="Div" justifyContent="Start" alignItems="Stretch">
						<items>
						</items>
					</VBox>

					<Label xmlns="sap.m" id="idSorting"></Label>

					<VBox xmlns="sap.m" id="idSortLayout" visible="true"
						displayInline="false" direction="Column" fitContainer="false"
						renderType="Div" justifyContent="Start" alignItems="Stretch">
						<items>

							<l:Grid id="idSortField" hSpacing="1" vSpacing="1">
								<Label xmlns="sap.m" id="idSortingFieldLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M3 S3" />
									</layoutData>
								</Label>
								<Select xmlns="sap.m" id="idSortingField" visible="true"
									enabled="true" width="100%" maxWidth="100%" selectedKey="{/sSortField}"
									type="Default" autoAdjustWidth="false" change="handleChangeForSortProperty"
									items="{/aAllProperties}">
									<core:Item key="{sName}" text="{sName}" />
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L4 M3 S3" />
									</layoutData>
								</Select>

								<Label xmlns="sap.m" id="idDirectionLabel" width="100%"
									textAlign="Right">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L1 M2 S2" />
									</layoutData>
								</Label>
								<VBox xmlns="sap.m" id="idSelectionMode" visible="true"
									displayInline="false" direction="Column" fitContainer="true"
									renderType="Div" justifyContent="Start">
									<items>
										<RadioButtonGroup xmlns="sap.m" id="idRadioBtnGroup"
											width="" columns="1" visible="true" editable="true"
											valueState="None" selectedIndex="{/nSortOrder}" enabled="true"
											select="handleChangeForSortProperty">
											<buttons>
												<RadioButton id="idAscending" key="Ascending" />
												<RadioButton id="idDescending" key="Descending" />
											</buttons>
										</RadioButtonGroup>
									</items>
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L3 M3 S3" />
									</layoutData>
								</VBox>
							</l:Grid>
						</items>
					</VBox>

					<Label xmlns="sap.m" id="idThumbnailTexts"></Label>

					<VBox xmlns="sap.m" id="idCornerTextLayout" visible="true"
						displayInline="false" direction="Column" fitContainer="false"
						renderType="Div" justifyContent="Start" alignItems="Stretch">
						<items>

							<l:Grid id="idCornerText" hSpacing="1" vSpacing="1">
								<Input xmlns="sap.m" id="idLeftUpper" editable="true"
									value="{/LeftUpper}" change="handleChangeForCornerText">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L6 M4 S4" />
									</layoutData>
								</Input>
								<Input xmlns="sap.m" id="idRightUpper" editable="true"
									value="{/RightUpper}" change="handleChangeForCornerText">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L6 M4 S4" />
									</layoutData>
								</Input>
							</l:Grid>
							<l:Grid id="idChartIconGrid" hSpacing="1" vSpacing="1">
								<Icon xmlns="sap.ui.core" id="idChartIcon" src="{/sSelectedChartPicture}"
									color="black" visible="true" decorative="true" size="30px">

									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L12 M8 S3" />
									</layoutData>
								</Icon>
							</l:Grid>

							<l:Grid id="idCornerTextBottom" hSpacing="1" vSpacing="1">
								<Input xmlns="sap.m" id="idLeftLower" editable="true"
									value="{/LeftLower}" change="handleChangeForCornerText">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L6 M4 S4" />
									</layoutData>
								</Input>
								<Input xmlns="sap.m" id="idRightLower" editable="true"
									value="{/RightLower}" change="handleChangeForCornerText">
									<layoutData>
										<GridData xmlns="sap.ui.layout" span="L6 M4 S4" />
									</layoutData>
								</Input>
							</l:Grid>
						</items>
					</VBox>
				</VBox>
			</ScrollContainer>
		</items>
	</VBox>
</mvc:View>
